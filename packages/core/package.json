{
  "name": "konfetti.js",
  "version": "0.1.0",
  "description": "A lightweight, performant confetti animation library for the web",
  "type": "module",
  "main": "dist/konfetti.umd.js",
  "module": "dist/konfetti.esm.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/konfetti.esm.js",
      "require": "./dist/konfetti.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint src",
    "format": "biome format src --write",
    "check": "biome check src --write"
  },
  "keywords": [
    "confetti",
    "konfetti",
    "particles",
    "animation",
    "canvas",
    "celebration"
  ],
  "author": "Andrea Bettich",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andreabettich/konfetti.js.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/andreabettich/konfetti.js#readme",
  "bugs": {
    "url": "https://github.com/andreabettich/konfetti.js/issues"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.3.0",
    "rollup": "^4.53.3",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  }
}
