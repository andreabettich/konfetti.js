{
  "name": "@konfetti/svelte",
  "version": "1.0.0",
  "description": "Svelte wrapper for konfetti.js",
  "type": "module",
  "svelte": "dist/index.js",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint src",
    "check": "biome check src --write"
  },
  "keywords": [
    "konfetti",
    "confetti",
    "svelte",
    "animation"
  ],
  "author": "Andrea Bettich",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andreabettich/konfetti.js.git",
    "directory": "packages/svelte"
  },
  "peerDependencies": {
    "konfetti.js": ">=0.2.0",
    "svelte": ">=4.0.0 || >=5.0.0"
  },
  "devDependencies": {
    "konfetti.js": "workspace:*",
    "svelte": "^5.46.1",
    "tsup": "^8.3.0",
    "typescript": "^5.9.3"
  }
}
